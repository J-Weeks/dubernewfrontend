
{{#each dogs}}
  <div class="jumbotron">
    <div class='container'>
      <div class='dog-description'>
        <div class='dog-thumb'><img style='max-height: 250px; max-width: 250px' src="{{{url}}}"></div>
        <div class='dog-text-info'>
          <h1>{{name}}</h1><br>
          <div class='dog-stats'>
            Breed: {{breed}}<br>
            Size: {{size}}<br>
            Notes: {{note}}<br>
            Dog Rating: {{rating}}
          </div>
        </div>
        <div class='dog-actions'>
          <button type="button" class="btn btn-primary edit-dog" data-id="{{id}}"> Edit Dog</button>
          <button type="button" class="btn btn-danger" data-id="{{id}}">Remove Dog</button>

        </div>
      </div>
    </div>
  </div>
{{/each}}
